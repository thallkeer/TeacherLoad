@model IEnumerable<TeacherLoad.Core.Models.Speciality>

@{
    ViewData["Title"] = "Специальности";
}

<h2>Специальности</h2>

<p>
    <a asp-action="Create">Добавить специальность</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialityName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Code">Редактировать</a> |               
                <a asp-action="Delete" asp-route-id="@item.Code">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
