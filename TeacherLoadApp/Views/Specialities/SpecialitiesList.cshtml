@model IEnumerable<TeacherLoad.Core.Models.Speciality>

@{
    ViewData["Title"] = "Специальности";
}

<h2>Специальности</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Добавить специальность</a>
</p>
<table class="table table-striped">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialityName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SpecialityName)
                </td>
                <td>
                    <a class="btn-sm btn-success" asp-action="Edit" asp-route-id="@item.Code">
                        <span class="btn-label"><i class="glyphicon glyphicon-pencil"></i></span>
                        Редактировать
                    </a>
                    <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Code">
                        <span class="btn-label"><i class="glyphicon glyphicon-trash"></i></span>
                        Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
