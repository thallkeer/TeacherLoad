@model IEnumerable<TeacherLoad.Core.Models.Discipline>

    
    <table class="table table-hover" id="disciplines" data-url="@Url.Action("Index")">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DisciplineName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisciplineName)
                    </td>
                    <td>
                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#add-discipline"
                                data-url="@Url.Action("Edit","Disciplines", new { id = item.DisciplineID })">
                            <span class="btn-label"><i class="glyphicon glyphicon-pencil"></i></span>
                            Изменить
                        </button>  
                        <a class="btn btn-danger" href="@Url.Action("Delete","Disciplines", new { id = item.DisciplineID })">
                            <span class="btn-label"><i class="glyphicon glyphicon-trash"></i></span>
                            Удалить
                        </a>                        
                    </td>
                </tr>
            }
        </tbody>
    </table>