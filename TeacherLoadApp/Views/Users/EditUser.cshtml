@model TeacherLoadApp.Models.UserWithRoleViewModel

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
<div class="editUser-block">
    <h1 class="h3 mb-3 font-weight-normal text-center">Изменение ролей пользователя @Model.UserName</h1>
    <form class="form-signin" method="post" asp-controller="Users" asp-action="Edit">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="UserId" />        
        <div class="form-group editUser-checkboxes">
            @foreach (var role in Model.AllRoles)
            {
                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" class="form-check-input" name="UserRoles" value="@role.Name"
                               @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />
                        @role.Name
                    </label>
                </div>
            }
        </div>
        <button class="btn btn-lg btn-success btn-block" type="submit">Сохранить</button>
    </form>
</div>

<script type="text/javascript">
        $(document).ready(() => {
            $("#login").val('');
        });
</script>
