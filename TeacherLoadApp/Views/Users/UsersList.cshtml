@model List<TeacherLoadApp.Models.UserWithRoleViewModel>

@{
    ViewData["Title"] = "Пользователи";
}

<h2>Пользователи</h2>

<p>
    <a class="btn btn-primary" asp-action="Register">Добавить пользователя</a>
    <a class="btn btn-primary" asp-controller="Roles" asp-action="Index">Роли пользователей</a>
</p>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToList()[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToList()[0].UserRoles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @String.Join(',', item.UserRoles)
            </td>
            <td>
                @{ await Html.RenderPartialAsync("ButtonPartial", Html.ViewData["id"] = item.UserId);}
            </td>
        </tr>
        }
    </tbody>
</table>
