@model TeacherLoad.Core.Models.Group

@{
    ViewData["Title"] = "Edit";
}

<h2>Редактирование группы</h2>

<h4>Группа</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupNumber" class="control-label"></label>
                <label>@Html.DisplayFor(model => model.GroupNumber)</label>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="FullTime" /> @Html.DisplayNameFor(model => model.FullTime)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Semester" class="control-label"></label>
                <input asp-for="Semester" class="form-control" />
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecialityCode" class="control-label"></label>
                <select asp-for="SpecialityCode" class="form-control" asp-items="ViewBag.SpecialityCode"></select>
                <span asp-validation-for="SpecialityCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
