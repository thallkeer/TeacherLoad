@model IEnumerable<TeacherLoad.Core.Models.Group>

@{
    ViewData["Title"] = "Учебные группы";
}

<div id="content">
    <h2>Учебные группы</h2>

    <div class="form-inline" style="margin: 20px auto;">
        <a class="btn btn-primary" asp-action="Create">Создать группу</a>
        <label class="control-label">Курс</label>
        @Html.DropDownList("Year", ViewBag.Years as SelectList, new { @class = "form-control selected-year" })
    </div>

    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.GroupNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Speciality)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StudentsCount)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Groups" asp-action="GroupDisciplinesPost" asp-route-id="@item.GroupNumber">@Html.DisplayFor(modelItem => item.GroupNumber)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Speciality.SpecialityName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StudentsCount)
                    </td>
                    <td>
                        @{ await Html.RenderPartialAsync("ButtonPartial", Html.ViewData["id"] = item.GroupNumber);}
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script type="text/javascript">
    $(document).ready(function () {
        $(".selected-year").change(function () {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("Index")',
                data: { year: $(".selected-year").val() },
                success: function (data) {
                    $('#content').html(data);
                }
            });
        });
    });
    </script>
}

