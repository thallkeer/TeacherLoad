@model List<GroupDisciplinesVMItem>

<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Discipline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].TeacherName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].ClassType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Discipline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassType)
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <a class="btn btn-primary" asp-controller="Groups" asp-action="Index">Назад</a>
</div>
