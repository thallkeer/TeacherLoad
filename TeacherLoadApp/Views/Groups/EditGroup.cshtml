@model TeacherLoad.Core.Models.Group

@{
    ViewData["Title"] = "Учебная группа";
}

<h2>Редактирование группы</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupNumber" class="control-label"></label>                
                <label>@Html.DisplayFor(model => model.GroupNumber)</label>
            </div>
            <div class="form-group">
                <label asp-for="SpecialityCode" class="control-label"></label>
                <select asp-for="SpecialityCode" class="form-control" asp-items="ViewBag.SpecialityCode"></select>
                <span asp-validation-for="SpecialityCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentsCount" class="control-label"></label>
                <input type="number" min="1" max="40" value="1" asp-for="StudentsCount" class="form-control" />
                <span asp-validation-for="StudentsCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-success" />
                <a class="btn btn-primary" asp-action="Index">Отменить</a>
            </div>
        </form>
    </div>
</div>
