@model IEnumerable<TeacherLoad.Core.Models.GroupStudies>

@{
    ViewData["Title"] = "Index";
}
<h2>Виды групповых занятий</h2>
<p>
    <a class="btn btn-primary" asp-action="Create">Добавить вид занятий</a>
</p>
<table class="table table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GroupClassName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupClassName)
                </td>
                <td>
                    @{ await Html.RenderPartialAsync("ButtonPartial", Html.ViewData["id"] = item.GroupClassID);}
                </td>
            </tr>
        }
    </tbody>
</table>
