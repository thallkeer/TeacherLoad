@model TeacherLoad.Core.Models.IndividualStudies

<h4>Добавление нового вида индивидуальных занятий</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IndividualClassName" class="control-label"></label>
                <input asp-for="IndividualClassName" class="form-control" />
                <span asp-validation-for="IndividualClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolumeByPerson" class="control-label"></label>
                <input type="number" min="1" max="32" value="@Model?.VolumeByPerson" asp-for="VolumeByPerson" class="form-control" />
                <span asp-validation-for="VolumeByPerson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-success" />
                <a class="btn btn-primary" asp-action="Index">Отменить</a>
            </div>
        </form>
    </div>
</div>


