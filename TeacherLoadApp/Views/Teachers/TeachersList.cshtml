@model IEnumerable<TeacherLoad.Core.Models.Teacher>

@{
    ViewData["Title"] = "Сотрудники кафедры";
}

<h2>Сотрудники кафедры</h2>

<p>
    <a class="btn btn-primary" asp-action="CreateTeacher">Добавить нового преподавателя</a>
</p>
<table class="table table-striped">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronym)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Patronym)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.DepartmentName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position.PositionName)
                </td>
                <td>
                    <a class="btn-sm btn-success" asp-action="Edit" asp-route-id="@item.TeacherID">
                        <span class="btn-label"><i class="glyphicon glyphicon-pencil"></i></span>
                        Редактировать
                    </a>
                    <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.TeacherID">
                        <span class="btn-label"><i class="glyphicon glyphicon-trash"></i></span>
                        Удалить
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
